

<%= form_for blog,:html => { :multipart => true, :class=>"form-horizontal" } do |f| %>

       <div class="col-md-6">
                   <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :title, class: 'form-control',:required=> true %>
                  </div>
                   <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :author %>
                    <%= f.text_field :author, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :category_id %>
                   <%=f.select :category_id, options_for_select(@categories.collect{|x| [x.name, x.id]}) ,{:prompt => "--select category--"} , :class => 'form-control',:required=> true%>
                  </div>
           <div class="form-group">
              <button type="submit" class="btn btn-sm btn-success">
                <i class="fa fa-check-sign"></i>Save
              </button>
              <%= link_to 'Back', blogs_path, :class=>"btn btn-sm btn-danger"%>

              <br><br>

            </div>

         </div>


<% end %>
